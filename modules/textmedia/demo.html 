    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.21.6/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.21.6/dist/js/uikit-icons.min.js"></script>
    
    <script>
    (function initSlideshows() {
        if (typeof UIkit === 'undefined') {
            setTimeout(initSlideshows, 100);
            return;
        }
        
        var wrappers = document.querySelectorAll('.slideshow-wrapper');
        
        wrappers.forEach(function(wrapper) {
            var variant = parseInt(wrapper.getAttribute('data-variant') || '0', 10);
            var slideshowEl = wrapper.querySelector('[uk-slideshow]');
            
            if (!slideshowEl) return;
            
            var thumbItems = wrapper.querySelectorAll('.thumb-item');
            var thumbNav = wrapper.querySelector('.thumb-nav');
            var autoplayStopped = false;
            
            // ==========================================
            // Höhe der vertikalen Thumb-Nav anpassen
            // ==========================================
            function syncThumbNavHeight() {
                if ((variant === 1 || variant === 2) && window.innerWidth > 768) {
                    var slideshowItems = slideshowEl.querySelector('.uk-slideshow-items');
                    if (slideshowItems && thumbNav) {
                        var height = slideshowItems.offsetHeight;
                        thumbNav.style.height = height + 'px';
                        thumbNav.style.maxHeight = height + 'px';
                    }
                } else if (thumbNav) {
                    thumbNav.style.height = '';
                    thumbNav.style.maxHeight = '';
                }
            }
            
            setTimeout(syncThumbNavHeight, 300);
            window.addEventListener('resize', syncThumbNavHeight);
            
            // ==========================================
            // VIDEO HANDLING
            // ==========================================
            function playVideo(slide) {
                var video = slide.querySelector('video');
                if (video) {
                    video.currentTime = 0;
                    video.play().catch(function(e) {
                        console.log('Video autoplay blocked:', e);
                    });
                }
            }
            
            function pauseVideo(slide) {
                var video = slide.querySelector('video');
                if (video) {
                    video.pause();
                }
            }
            
            function pauseAllVideos() {
                var videos = slideshowEl.querySelectorAll('video');
                videos.forEach(function(video) {
                    video.pause();
                });
            }
            
            // ==========================================
            // Thumb Navigation
            // ==========================================
            function updateActiveThumbs(index) {
                thumbItems.forEach(function(item, i) {
                    item.classList.toggle('uk-active', i === index);
                });
            }
            
            function scrollThumbToCenter(index) {
                var activeThumb = thumbItems[index];
                if (!activeThumb || !thumbNav) return;
                
                var isMobile = window.innerWidth <= 768;
                var isVertical = (variant === 1 || variant === 2) && !isMobile;
                
                if (isVertical) {
                    var thumbNavHeight = thumbNav.clientHeight;
                    var thumbTop = activeThumb.offsetTop;
                    var thumbHeight = activeThumb.offsetHeight;
                    var scrollTarget = thumbTop - (thumbNavHeight / 2) + (thumbHeight / 2);
                    
                    thumbNav.scrollTo({
                        top: Math.max(0, scrollTarget),
                        behavior: 'smooth'
                    });
                } else if (variant === 3 || ((variant === 1 || variant === 2) && isMobile)) {
                    var thumbNavWidth = thumbNav.clientWidth;
                    var thumbLeft = activeThumb.offsetLeft;
                    var thumbWidth = activeThumb.offsetWidth;
                    var scrollTarget = thumbLeft - (thumbNavWidth / 2) + (thumbWidth / 2);
                    
                    thumbNav.scrollTo({
                        left: Math.max(0, scrollTarget),
                        behavior: 'smooth'
                    });
                }
            }
            
            // ==========================================
            // Slideshow Events
            // ==========================================
            
            // Slide wird angezeigt -> Video abspielen
            UIkit.util.on(slideshowEl, 'itemshow', function(e) {
                try {
                    var slideshow = UIkit.slideshow(slideshowEl);
                    if (slideshow) {
                        var index = slideshow.index;
                        updateActiveThumbs(index);
                        scrollThumbToCenter(index);
                        
                        // Video im aktuellen Slide abspielen
                        var currentSlide = e.target;
                        playVideo(currentSlide);
                    }
                } catch(err) {}
            });
            
            // Slide wird versteckt -> Video pausieren
            UIkit.util.on(slideshowEl, 'itemhide', function(e) {
                var hiddenSlide = e.target;
                pauseVideo(hiddenSlide);
            });
            
            // ==========================================
            // Thumb Click Handler
            // ==========================================
            thumbItems.forEach(function(thumb) {
                var index = parseInt(thumb.getAttribute('data-slide-index') || '0', 10);
                
                thumb.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    try {
                        var slideshow = UIkit.slideshow(slideshowEl);
                        if (!slideshow) return;
                        
                        // Autoplay stoppen
                        if (!autoplayStopped) {
                            slideshow.stopAutoplay();
                            autoplayStopped = true;
                        }
                        
                        // Alle Videos pausieren bevor gewechselt wird
                        pauseAllVideos();
                        
                        // Zu Slide wechseln
                        slideshow.show(index);
                    } catch(err) {}
                });
                
                thumb.setAttribute('tabindex', '0');
                thumb.setAttribute('role', 'button');
                
                thumb.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        thumb.click();
                    }
                });
            });
            
            // Initial
            updateActiveThumbs(0);
            
            // Erstes Video abspielen falls vorhanden
            var firstSlide = slideshowEl.querySelector('.uk-slideshow-items > li');
            if (firstSlide) {
                setTimeout(function() {
                    playVideo(firstSlide);
                }, 500);
            }
        });
    })();
    </script>
    
</body>
</html>